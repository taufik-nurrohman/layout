html(dir='ltr')
  head
    meta(charset='utf-8')
    meta(content='width=device-width' name='viewport')
    title Navigation
    link(href='../index.min.css?v=1' rel='stylesheet')
    style
      | @media (min-width: 45rem) {
      |   :root {
      |     padding-bottom: 3rem;
      |     padding-top: 3rem;
      |   }
      |   body > * {
      |     margin-left: auto;
      |     margin-right: auto;
      |     max-width: 45rem;
      |   }
      | }
  body
    main
      nav
        ul
          li: a(href='..') Home
          li: a(href='../form') Form
          li: a(href='../links') Links
          li: a(href='../list') List
          li: a(aria-current='page' href='') Table
      h1 Table
      h2 Horizontal
      table
        caption Table caption goes here.
        thead
          tr
            th Table Header 1
            th Table Header 2
            th Table Header 3
        tbody
          tr
            td Table Data 1.1
            td Table Data 1.2
            td Table Data 1.3
          tr
            td Table Data 2.1
            td Table Data 2.2
            td Table Data 2.3
          tr
            td Table Data 3.1
            td Table Data 3.2
            td Table Data 3.3
      h2 Vertical
      table
        caption Table caption goes here.
        tbody
          tr
            th(scope='row') Table Header 1
            td Table Data 1.1
            td Table Data 1.2
            td Table Data 1.3
          tr
            th(scope='row') Table Header 2
            td Table Data 2.1
            td Table Data 2.2
            td Table Data 2.3
          tr
            th(scope='row') Table Header 3
            td Table Data 3.1
            td Table Data 3.2
            td Table Data 3.3
      h2 Both
      table
        caption Table caption goes here.
        thead
          tr
            th
            th Table Header 1
            th Table Header 2
            th Table Header 3
        tbody
          tr
            th(scope='row') Table Header 1
            td Table Data 1.1
            td Table Data 1.2
            td Table Data 1.3
          tr
            th(scope='row') Table Header 2
            td Table Data 2.1
            td Table Data 2.2
            td Table Data 2.3
          tr
            th(scope='row') Table Header 3
            td Table Data 3.1
            td Table Data 3.2
            td Table Data 3.3